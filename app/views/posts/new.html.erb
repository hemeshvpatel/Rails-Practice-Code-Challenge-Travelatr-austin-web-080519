<h1>Yo ... LETS POST THIS SHIIIIIIIIIIIT!</h1>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
        <br><br>
    <%= f.label :content %>
    <%= f.text_area :content %>
        <br><br>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name  %>
        <br><br>
    <%= f.collection_select :destination_id, Destination.all, :id, :name  %>
        <br><br>
    <%= f.hidden_field :likes, value: 0 %>
    <%= f.submit %>
<% end %> 